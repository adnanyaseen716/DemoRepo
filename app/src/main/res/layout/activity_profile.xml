<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Profile">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/theme"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/ivBackProfile"
                android:layout_width="30dp"
                android:layout_height="63dp"
                android:src="@drawable/back"
                android:layout_alignParentStart="true"
                android:layout_marginStart="10dp"
                app:tint="@color/white"
                android:clickable="true"/>
            <androidx.appcompat.widget.Toolbar
                android:id="@+id/topAppBar"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                app:title="Profile"
                app:titleTextColor="@color/white"
                app:titleTextAppearance="@style/TextAppearance.Material3.HeadlineMedium"
                android:layout_marginStart="40dp"/>
        </RelativeLayout>
    </com.google.android.material.appbar.AppBarLayout>


    <TextView
        android:id="@+id/Heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="User Profile info:"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"/>

    <ImageView
        android:id="@+id/ivProfilePhoto"
        android:layout_width="200dp"
        android:layout_height="170dp"
        android:scaleType="fitXY"
        android:src="@drawable/person"
        android:layout_marginStart="80dp"
        android:layout_marginTop="50dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnAddPic"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Add Picture"
        android:drawableStart="@drawable/uploadpic"
        android:textStyle="bold"
        android:textSize="12dp"
        android:textColor="@color/white"
        android:backgroundTint="@color/theme"
        android:layout_marginStart="115dp"
        android:layout_marginTop="20dp"/>


    <EditText
        android:id="@+id/etProfileUsername"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="User Name"
        android:textSize="20dp"
        android:inputType="text"
        android:layout_marginStart="40dp"
        android:layout_marginTop="50dp"/>

    <EditText
        android:id="@+id/etProfileEmail"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="Email Address"
        android:textSize="20dp"
        android:inputType="textEmailAddress"
        android:layout_marginStart="40dp"
        android:layout_marginTop="50dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnProfileSave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save  Profile"
        android:textStyle="bold"
        android:textSize="17dp"
        android:textColor="@color/white"
        android:backgroundTint="@color/theme"
        android:layout_marginStart="115dp"
        android:layout_marginTop="30dp"/>

</LinearLayout>



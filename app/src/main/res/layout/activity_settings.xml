<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainSettings"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Settings">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/theme"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/ivBackSettings"
                android:layout_width="30dp"
                android:layout_height="63dp"
                android:src="@drawable/back"
                android:layout_alignParentStart="true"
                android:layout_marginStart="10dp"
                app:tint="@color/white"
                android:clickable="true"/>
            <androidx.appcompat.widget.Toolbar
                android:id="@+id/topAppBar"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                app:title="Settings"
                app:titleTextColor="@color/white"
                app:titleTextAppearance="@style/TextAppearance.Material3.HeadlineMedium"
                android:layout_marginStart="40dp"/>
        </RelativeLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <ImageView
        android:id="@+id/setting"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/settings"
        android:scaleType="fitXY"
        android:layout_marginTop="20dp"
        android:padding="10dp"
        android:background="@color/white"
        app:layout_constraintTop_toBottomOf="@id/appBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/RadioGroupFirstHeading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select NotePad App Theme:"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="40dp"
        android:background="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/setting"/>

    <RadioGroup
        android:id="@+id/RadioGroupFirst"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="10dp"
        android:paddingStart="70dp"
        android:background="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/RadioGroupFirstHeading">
        <RadioButton
            android:id="@+id/rbLight"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Light"
            android:textStyle="bold"
            android:checked="false"
            android:textSize="17sp"/>
        <RadioButton
            android:id="@+id/rbDark"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Dark"
            android:textStyle="bold"
            android:checked="false"
            android:textSize="17sp"/>
    </RadioGroup>

    <TextView
        android:id="@+id/RadioGroupSecondHeading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select NotePad App Text Style:"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="150dp"
        android:background="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/RadioGroupFirstHeading"/>

    <RadioGroup
        android:id="@+id/RadioGroupSecond"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="10dp"
        android:paddingStart="70dp"
        android:background="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/RadioGroupSecondHeading">
        <RadioButton
            android:id="@+id/rbNormal"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Normal"
            android:textStyle="bold"
            android:checked="false"
            android:textSize="17sp"/>
        <RadioButton
            android:id="@+id/rbBold"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Bold"
            android:textStyle="bold"
            android:checked="false"
            android:textSize="17sp"/>
        <RadioButton
            android:id="@+id/rbItalic"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Italic"
            android:textStyle="bold"
            android:checked="false"
            android:textSize="17sp"/>
    </RadioGroup>
</androidx.constraintlayout.widget.ConstraintLayout>